extends layouts/main-layout.pug

block links
  link(rel="stylesheet", href="../index.css")

block content
  .news
    each item in news
      a(href=`/news/${item.id}`)
        .news__block
          .news__title #{item.title}
          .news__description #{item.description}
          if item.author
            .news__author by #{item.author}
          if path === '/admin/news'
            .buttons
              form(action="/admin/edit-article" method="post")
                input(type="hidden" name="articleId" value=`${item.id}`)
                input.button(type="submit" value="Edit")
              form(action="/admin/delete-article" method="post")
                input(type="hidden" name="articleId" value=`${item.id}`)
                input.button(type="submit" value="Delete")
